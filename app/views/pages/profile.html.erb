<div class="profile m-4">
<% if @user.dinners.any? %>
  <p class="fs-5">Your Dinners:</p>
  <% @user.dinners.each do |dinner| %>
    <div class="dinner bg-white d-flex justify-content-around">
    <div class="m-3 rounded-circle myavatar align-self-center" style="background-image: url('<%= cl_image_path(@current_user.photo.key) %>')"></div>
      <div class="dinner-info align-self-center text-center">
      <p class="fs-5"><strong><em>You have a dinner with <%= dinner.philosopher.user.username %>!</em></strong></p>
      <p class="fs-5">📅 <%= dinner.date %></p>
      <p class="fs-5">🕰️ <%= dinner.length %>h</p>
      <p class="fs-5">📍<%= dinner.philosopher.location %></p>
      </div>
    <div class="m-3 rounded-4 hisavatar" style="background-image: url('<%= cl_image_path(dinner.philosopher.user.photo.key) %>')"></div>
    </div>
  <% end %>
<% else %>
<div class="d-flex justify-content-center">
<div class="hola rounded-4">
<div class="flex-column">
<div class="nodinner text-center text-white">
  <br><p class="fs-5">You don't have any dinner booked 😔</p>
</div>
<br>
<div class="d-flex justify-content-center">
  <%= link_to 'Book a dinner with a philosopher!', philosophers_path, class: 'mybutton' %>
  </div>
<% end %>
</div>
</div>
</div>
</div>
