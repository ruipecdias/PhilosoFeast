 <div class="signin-page">
   <div class='d-flex justify-content-center'>
     <div class='signup-card col-4 p-5 m-4 rounded-4 bg-white bg-opacity-10'>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
      <h1>Sign up</h1>

    <div class="form-inputs text-light">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "username" }%>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :password,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :photo,
                  as: :file,
                  required: true,
                  label: 'Upload Profile Picture',
                  input_html: { autocomplete: "off" } %>
    </div>

      <div class="d-flex justify-content-center">
        <div class="form-actions">
        <%= f.button :submit, "Sign up", class: "btn btn-dark text-white rounded-4" %>
        </div>
      <% end %>
      </div><br>
      <div class="d-flex justify-content-end">
      <%= link_to "Already have an account? Login", new_session_path(resource_name), class: "text-light" %><br />
      </div>
    </div>
  </div>
</div>
