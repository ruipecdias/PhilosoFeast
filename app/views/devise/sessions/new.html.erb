 <div class="login-signin-page">
  <div class='d-flex justify-content-center'>
    <div class='signup-card col-4 p-5 m-4 rounded-4 bg-white bg-opacity-10'>
      <div class="login">
        <h1>Log in</h1>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs text-light">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" } %>
            <%= f.input :password,
                        required: false,
                        input_html: { autocomplete: "current-password" } %>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        <div class="d-flex justify-content-center">
          <div class="form-actions">
            <%= f.button :submit, "Log in", class: "btn btn-dark text-white rounded-4 px-5 mb-1" %><br>
          </div>
          <% end %>
        </div>
          <div class="d-flex justify-content-center">
            <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-light"%>
            </div><br>
          <div class="d-flex justify-content-end">
          <%= link_to "Not registered yet? Sign up", new_registration_path(resource_name), class: "text-light"%>
        </div>
      </div>
    </div>
  </div>
</div>
