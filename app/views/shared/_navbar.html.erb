<div class="navbar text-body">
  <div class="container-fluid">
    <%= link_to root_path do %>
      <%= image_tag "philosofeast.png", class: "logo"  %>
    <% end %>
    <div class="navbar-nav flex-grow-1">
      <div class="d-flex justify-content-end gap-4">
        <% if user_signed_in? %>
          <% if !current_user.philosopher? %>

              <%= link_to "I'm a philosopher", new_philosopher_path, class: "nav-link" %>

          <% end %>

            <%= link_to "Profile", profile_path, class: "nav-link" %>


            <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "nav-link" %>

        <% else %>

            <%= link_to "Login", new_user_session_path, class: "nav-link" %>

        <% end %>
      </div>
    </div>
  </div>
</div>
